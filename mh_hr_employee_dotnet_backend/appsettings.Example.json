{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=YOUR_DATABASE;User Id=YOUR_USERNAME;Password=YOUR_PASSWORD;TrustServerCertificate=True;Trusted_connection=False;Integrated Security=False;"
  },

  "Jwt": {
    "Key": "YOUR_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS",
    "Issuer": "YOUR_ISSUER_NAME",
    "Audience": "YOUR_AUDIENCE_NAME",
    "ExpiryInHours": 24
  },

  "Email": {
    "SmtpServer": "YOUR_SMTP_SERVER",
    "SmtpPort": 587,
    "Username": "YOUR_EMAIL@example.com",
    "Password": "YOUR_EMAIL_PASSWORD",
    "FromName": "MH HR Employee System"
  }
}
